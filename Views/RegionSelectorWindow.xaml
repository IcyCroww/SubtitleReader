<Window x:Class="SubtitleReader.Views.RegionSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выделение области"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        WindowState="Maximized"
        Cursor="Cross"
        ShowInTaskbar="False">
    
    <Grid x:Name="MainGrid">
        <!-- Полупрозрачный фон -->
        <Rectangle Fill="#40000000" />
        
        <!-- Выделенная область -->
        <Canvas x:Name="SelectionCanvas">
            <!-- Рамка выделения -->
            <Border x:Name="SelectionBorder"
                    BorderBrush="#FF4A90E2"
                    BorderThickness="2"
                    Background="#204A90E2"
                    Visibility="Collapsed">
                <Border.Effect>
                    <DropShadowEffect Color="#4A90E2" BlurRadius="10" ShadowDepth="0" Opacity="0.5"/>
                </Border.Effect>
            </Border>
            
            <!-- Информация о размере -->
            <Border x:Name="SizeInfoBorder"
                    Background="#E0000000"
                    CornerRadius="4"
                    Padding="8,4"
                    Visibility="Collapsed">
                <TextBlock x:Name="SizeInfoText"
                           Foreground="White"
                           FontSize="12"
                           FontFamily="Consolas"/>
            </Border>
        </Canvas>
        
        <!-- Инструкция -->
        <Border HorizontalAlignment="Center" 
                VerticalAlignment="Top" 
                Margin="0,20,0,0"
                Background="#E0000000"
                CornerRadius="8"
                Padding="16,12">
            <StackPanel>
                <TextBlock Text="Выделите область для распознавания текста"
                           Foreground="White"
                           FontSize="16"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Зажмите левую кнопку мыши и выделите область. ESC для отмены."
                           Foreground="#CCCCCC"
                           FontSize="12"
                           HorizontalAlignment="Center"
                           Margin="0,4,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
